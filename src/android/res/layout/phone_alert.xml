<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/tv_pa_view"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:layout_gravity="center"
  android:orientation="vertical"

  >

  <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="0.5"
    android:layout_gravity="center"
    android:background="@drawable/top_background"
    android:gravity="center"
    android:orientation="vertical"

    >

    <TextView
      android:id="@+id/tv_pa_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="姓名"
      android:textColor="#fff"
      android:textSize="26sp" />

    <TextView
      android:id="@+id/tv_pa_number"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:text="脱敏电话号码"
      android:textColor="#fff"
      android:textSize="16sp" />
  </LinearLayout>

  <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="0.5"
    android:layout_gravity="center"
    android:background="#843def"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
      android:id="@+id/tv_pa_f1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="公司本部-XX中心-XXX科"
      android:textColor="#fff"
      android:textSize="20sp" />

    <TextView
      android:id="@+id/tv_pa_f2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
      android:layout_marginTop="10dp"
      android:text="XX有限公司"
      android:textColor="#fff"
      android:textSize="20sp" />
  </LinearLayout>
  <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="0.5"
    android:layout_gravity="center"
    android:background="@drawable/bottom_background"
    android:gravity="center"
    android:orientation="vertical">


    <EditText
      android:id="@+id/tv_pa_et1"
      android:layout_width="match_parent"
      android:layout_height="100dp"
      android:padding="10dp"
      android:ems="10"
      android:gravity="center"
      android:enabled="true"
      android:focusableInTouchMode="true"
      android:inputType="textMultiLine"
      android:hint="请输入备注..."
      android:background="@null"
      android:textCursorDrawable="@null"
      android:textColorHint="#FFFFD2D2"
      android:minLines="5" />
  </LinearLayout>
</android.widget.LinearLayout>
